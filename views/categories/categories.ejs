<%- include("../common/header", { title: "Add Product" }) %>
<%- include("../common/navbar") %>
<div class="container">
    <h2 class="text-center">Category Master - View Categories</h2>
    <table border="1" class="table mt-3" cellpadding="8">
        <thead class="table-dark">
            <th>ID</th>
            <th>Category Name</th>
            <th>Action</th>
        </thead>
        <% if (categories.length === 0) { %>
        <tr>
            <td colspan="3" class="text-center text-muted">
                No categories found
            </td>
        </tr>
        <% } else { %>
        <% categories.forEach(cat => { %>
            <tr>
                <td><%= cat.id %></td>
                <td><%= cat.name %></td>
                <td>
                    <form method="POST" action="/categories/delete/<%= cat.id %>" style="display:inline;">
                        <button class="btn btn-danger" type="submit">Delete Category</button>
                    </form>
                    <button class="btn">
                        <a href="/categories/edit/<%= cat.id %>">Edit Category</a>
                    </button>
                </td>
            </tr>
        <% }) %>
        <% } %>
    </table>
</div>
